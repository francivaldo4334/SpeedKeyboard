<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/keyboard_shape"
    android:backgroundTint="@color/background"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_56dp"
        android:background="@drawable/keyboard_shape"
        android:backgroundTint="@color/surface"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_mode"
            android:layout_width="@dimen/_56dp"
            android:layout_height="@dimen/_56dp"
            android:background="@drawable/button_select_mode"
            android:padding="0dp"
            android:text="@string/mode_chars"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/emoji"
            android:layout_width="@dimen/_56dp"
            android:layout_height="@dimen/_56dp"
            android:background="@drawable/button_select_mode"
            android:padding="0dp"
            android:text="@string/mode_emoji"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_confirm"
            android:layout_width="@dimen/_112dp"
            android:layout_height="@dimen/_56dp"
            android:background="@drawable/button_action"
            android:padding="0dp"
            android:text="Ok"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_12dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/keyboard_height"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/_32dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/spacer_tl"
                android:layout_width="match_parent"
                android:background="#00000000"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/spacer_bl"
                android:layout_width="match_parent"
                android:background="#00000000"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <GridLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/keyboard_height"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/shape_rounded"
            android:columnCount="3"
            android:orientation="vertical"
            android:rowCount="2">

            <Button
                android:id="@+id/btn0"
                android:layout_row="0"
                android:layout_rowWeight="0.5"
                android:layout_column="0"
                android:layout_columnWeight="0.3"
                android:background="@drawable/button_shape_state_top_left"
                android:text="@string/t1"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:id="@+id/btn1"
                android:layout_row="0"
                android:layout_rowWeight="0.5"
                android:layout_column="1"
                android:layout_columnWeight="0.3"
                android:background="@drawable/button_shape_state"
                android:text="@string/t2"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:id="@+id/btn2"
                android:layout_row="0"
                android:layout_rowWeight="0.5"
                android:layout_column="2"
                android:layout_columnWeight="0.3"
                android:background="@drawable/button_shape_state_top_right"
                android:text="@string/t3"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:id="@+id/btn3"
                android:layout_row="1"
                android:layout_rowWeight="0.5"
                android:layout_column="0"
                android:layout_columnWeight="0.3"
                android:background="@drawable/button_shape_state_bottom_left"
                android:text="@string/t4"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:id="@+id/btn4"
                android:layout_row="1"
                android:layout_rowWeight="0.5"
                android:layout_column="1"
                android:layout_columnWeight="0.3"
                android:background="@drawable/button_shape_state"
                android:text="@string/t5"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:id="@+id/btn5"
                android:layout_row="1"
                android:layout_rowWeight="0.5"
                android:layout_column="2"
                android:layout_columnWeight="0.3"
                android:background="@drawable/button_shape_state_bottom_right"
                android:text="@string/t6"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/button_text_size" />
        </GridLayout>

        <LinearLayout
            android:layout_width="@dimen/_32dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/spacer_tr"
                android:layout_width="match_parent"
                android:background="#00000000"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/spacer_br"
                android:layout_width="match_parent"
                android:background="#00000000"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_32dp" />
</LinearLayout>