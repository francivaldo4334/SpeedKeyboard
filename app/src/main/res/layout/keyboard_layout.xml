<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    android:background="@drawable/keyboard_shape"
    android:backgroundTint="@color/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/keyboard_shape"
        android:backgroundTint="@color/surface">
        <Button
            android:id="@+id/button_mode"
            android:layout_width="@dimen/_48dp"
            android:layout_height="@dimen/_48dp"
            android:background="@drawable/button_select_mode"
            android:text="@string/mode_number"
            android:textSize="@dimen/_18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="0dp"/>
        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/button_confirm"
            android:layout_width="@dimen/_48dp"
            android:layout_height="@dimen/_48dp"
            android:background="@drawable/button_action"
            android:text="Ok"
            android:textColor="@color/white"
            android:padding="0dp"/>
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_8dp"/>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/keyboard_height"
        android:paddingHorizontal="@dimen/_24dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:rowCount="2"
        android:columnCount="3">
        <Button
            android:layout_rowWeight="0.5"
            android:layout_columnWeight="0.3"
            android:textSize="@dimen/button_text_size"
            android:textColor="@color/white"
            android:background="@drawable/button_shape_state"
            android:text="@string/t1"
            android:id="@+id/btn0"
            android:layout_column="0"
            android:layout_row="0"/>
        <Button
            android:layout_rowWeight="0.5"
            android:layout_columnWeight="0.3"
            android:textSize="@dimen/button_text_size"
            android:textColor="@color/white"
            android:background="@drawable/button_shape_state"
            android:text="@string/t2"
            android:id="@+id/btn1"
            android:layout_column="1"
            android:layout_row="0"/>
        <Button
            android:layout_rowWeight="0.5"
            android:layout_columnWeight="0.3"
            android:textSize="@dimen/button_text_size"
            android:textColor="@color/white"
            android:background="@drawable/button_shape_state"
            android:text="@string/t3"
            android:id="@+id/btn2"
            android:layout_column="2"
            android:layout_row="0"/>
        <Button
            android:layout_rowWeight="0.5"
            android:layout_columnWeight="0.3"
            android:textSize="@dimen/button_text_size"
            android:textColor="@color/white"
            android:background="@drawable/button_shape_state"
            android:text="@string/t4"
            android:id="@+id/btn3"
            android:layout_column="0"
            android:layout_row="1"/>
        <Button
            android:layout_rowWeight="0.5"
            android:layout_columnWeight="0.3"
            android:textSize="@dimen/button_text_size"
            android:textColor="@color/white"
            android:background="@drawable/button_shape_state"
            android:text="@string/t5"
            android:id="@+id/btn4"
            android:layout_column="1"
            android:layout_row="1"/>
        <Button
            android:layout_rowWeight="0.5"
            android:layout_columnWeight="0.3"
            android:textSize="@dimen/button_text_size"
            android:textColor="@color/white"
            android:background="@drawable/button_shape_state"
            android:text="@string/t6"
            android:id="@+id/btn5"
            android:layout_column="2"
            android:layout_row="1"/>
    </GridLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_24dp"/>
</LinearLayout>